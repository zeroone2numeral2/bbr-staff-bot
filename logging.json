{
    "version": 1,
    "disable_existing_loggers": false,
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "level": "DEBUG"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "level": "DEBUG",
            "encoding": "utf8",
            "maxBytes": 1048576,
            "filename": "logs/bot.log",
            "backupCount": 20
        }
    },
    "loggers": {
        "": {
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false,
            "level": "DEBUG"
        },
        "telegram": {
            "level": "WARNING"
        },
        "apscheduler.scheduler": {
            "level": "WARNING"
        },
        "hpack": {
            "level": "INFO"
        },
        "httpx": {
            "level": "WARNING"
        },
        "httpcore": {
            "level": "WARNING"
        },
        "loader": {
            "level": "INFO"
        },
        "save_from_message": {
            "level": "INFO"
        }
    },
    "formatters": {
        "short": {
            "format": "[%(name)s][%(levelname)s] >>> %(message)s"
        },
        "standard": {
            "format": "[%(asctime)s][%(name)s][%(module)s:%(funcName)s:%(lineno)d][%(levelname)s] >>> %(message)s"
        },
        "conversation_status": {
            "format": "[%(asctime)s][%(levelname)s] >>> %(message)s"
        }
    }
}
